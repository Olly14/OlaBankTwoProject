@model Bank.App.Models.AppUserViewModel
@inject SignInManager<AppUser> signInManager

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete @Model.FirstName @Model.LastName?</h3>
<div>
    <h4>
        @Model.FirstName @Model.LastName
    </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstLineOfAddress)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.FirstLineOfAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SecondLineOfAddress)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.SecondLineOfAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Town)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Town)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Postcode)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Postcode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CountryId)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.CountryId)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GenderId)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.GenderId)
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-id="model.Urikey">
        @Html.Hidden("UriKey")
        @Html.Hidden("Id")
        <input type="submit" value="Delete" class="btn btn-danger deleteBtn" id="deleteBtnId" /> |

        @if (signInManager.IsSignedIn(User) && (User.IsInRole("Bank Admin") || User.IsInRole("Bank Manager")))
        {
            <a class="btn btn-primary" asp-action="Index">Back to List</a>
        }
        else
        {
            <a class="btn btn-primary" asp-action="AppUserIndex" asp-route-id="@Model.UriKey">Back to List</a>
        }


        <a asp-action="Index">Back to List</a>
    </form>
</div>


